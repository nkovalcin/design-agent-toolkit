{
  "name": "design-agent-toolkit",
  "version": "1.0.0",
  "description": "AI-powered design assistant using Claude's multi-agent architecture. Get expert UI/UX reviews, accessibility audits, and design system guidance.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "design-agent": "dist/cli.js"
  },
  "files": [
    "dist",
    "frameworks",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "ai-agent",
    "claude",
    "claude-sdk",
    "design",
    "design-system",
    "ui",
    "ux",
    "accessibility",
    "a11y",
    "typography",
    "css",
    "frontend",
    "code-review",
    "anthropic"
  ],
  "author": {
    "name": "Norbert Kovalčín",
    "email": "mail@nkovalcin.com",
    "url": "https://nkovalcin.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nkovalcin/design-agent-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/nkovalcin/design-agent-toolkit/issues"
  },
  "homepage": "https://github.com/nkovalcin/design-agent-toolkit#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "@anthropic-ai/claude-agent-sdk": ">=0.1.0"
